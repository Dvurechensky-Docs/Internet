---
layout: null
---
[
{% assign pages_to_index = site.pages | where_exp:"page","page.path contains 'categories/'" %}
{% for page in pages_to_index %}
  {% assign rows = page.content | split: "\n" %}
  {% for row in rows %}
    {% if row contains "|" %}
      {
        "title": "{{ page.title | strip_newlines | replace: '"', ' ' }}",
        "url": "{{ page.url | relative_url }}",
        "content": "{{ row | replace: '|', ' ' | strip_html | strip_newlines | replace: '"', ' ' }}"
      }{% unless forloop.last and forloop.parentloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
{% endfor %}
]
